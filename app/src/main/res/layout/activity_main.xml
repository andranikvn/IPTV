<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight"
    android:orientation="vertical"

    tools:context=".Activities.MainActivity">


        <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/main_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/SignInIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"

        />
    </FrameLayout>




    <EditText
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Login"
        android:background="@drawable/corners"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"

        android:padding="4dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
        android:padding="4dp"
        android:inputType="textPassword"
        android:background = "@drawable/corners"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:background="@drawable/custom_login_button"
        android:layout_width="match_parent"


        android:layout_height="35dp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/main_text_margins_eft_right"
        android:layout_marginTop="@dimen/main_text_margin_top_bottom"
        android:layout_marginRight="@dimen/main_text_margins_eft_right"
        android:text="Login" />




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>